<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @cart.user_id %>
</p>
<p>
  
 <table>
  <thead>
    <tr>
      <th>item</th>
      <th>quantity</th>
<th>total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% CartItem.all.each do |list| %>
      <tr>
<% if @cart == list.cart %>
        <td><%= list.item.name %></td>
        <td><%= list.quantity %></td>
        <td><%= list.price %></td>
 <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

</p>

